<h1>Usuarios</h1>
<% if flash[:notice] %>
<%= stylesheet_link_tag 'default' %>
<p style="color: green; font-style: italic"><%= flash[:notice] %></p>
<% end %>

<p> <%= link_to "Novo Usuário", :action => "edit" %></p>
<table border="0" cellpading="1" cellpacing="1">
<tbody>
<tr>
	<tt></tt>
	<tt></tt>
	<tt></tt>
	<tt></tt>
</tr>
<% @usuarios.each do |usuario| %>
<tr>
	<td><%= usuario.nome %><td>
	<td><%= usuario.email %><td>
	<td><%= usuario.fone %><td>
	<td>
		<%= link_to "Editar", :action => "edit", :id => usuario %> ou
		<%= link_to "Excluir", { :action => "delete", :id => usuario }, :confirm => "Deseja realmente excluir o usuário?" %>
	</td>
</tr>
<tbody>
<% end %>
</table>