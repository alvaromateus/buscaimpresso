<h1>Processos</h1>
<% if flash[:notice] %>
<%= stylesheet_link_tag 'default' %>
<p style="color: green; font-style: italic"><%= flash[:notice] %></p>
<% end %>

<p> <%= link_to "Novo Processo", :action => "edit" %></p>
<table border="0" cellpading="1" cellpacing="1">
<tbody>
<tr>
	<tt></tt>
	<tt></tt>
</tr>
<% @processos.each do |processo| %>
<tr>
	<td><%= processo[:nome] %><td>
	<td>
		<%= link_to "Editar", :action => "edit", :id => processo %> ou
		<%= link_to "Excluir", { :action => "delete", :id => processo }, :confirm => "Deseja realmente excluir o processo?" %>
	</td>
</tr>
<tbody>
<% end %>
</table>